<form class="form-horizontal">

	<h3>{{ _('Simple Chamber Settings') }}</h3>

	<div class="control-group" title="{{ _('Uncheck to disable the fan completely.') }}">
		<label class="control-label">{{ _('Fan enabled') }}</label>
		<div class="controls">
			<input type="checkbox" data-bind="checked: settings.plugins.simplechamber.fan_enabled">
			<div class="help-block">{{ _('If unchecked, the cooling fan won\'t be turned on no matter the temperature.') }}</div>
		</div>
	</div>

	<div class="control-group" title="{{ _('When chamber temperature reaches this value the fan will turn on.') }}">
		<label class="control-label">{{ _('Maximum chamber temperature') }}</label>
		<div class="controls">
			<div class="input-append">
				<input type="number" class="input-mini text-right" min="0" max="99" step="0.1" data-bind="value: settings.plugins.simplechamber.max_temp">
				<span class="add-on">Â°C</span>
			</div>
		</div>
	</div>

	<div class="control-group" title="{{ _('How the DHT sensor is accessed by the plugin.') }}">
		<label class="control-label">{{ _('Temperature sensor driver') }}</label>
		<div class="controls">
 			<label class="radio">
				<input type="radio" value="dtoverlay" data-bind="checked: settings.plugins.simplechamber.dht_driver">{{ _('Use Device Tree Overlay') }}
				<div class="help-block">{{ _('The first DHT device found will be used.') }}</div>
			</label>
		</div>
		<div class="controls">
			<label class="radio">
				<input type="radio" value="adafruit_dht" data-bind="checked: settings.plugins.simplechamber.dht_driver">{{ _('Use Adafruit CircuitPython DHT Library') }}
				<div class="help-block">{{ _('The DHT device specified below (type and pin) will be used.') }}</div>
			</label>
		</div>
	</div>

	<div data-bind="enable: settings.plugins.simplechamber.dht_driver() == 'adafruit_dht', style: { opacity: settings.plugins.simplechamber.dht_driver() == 'adafruit_dht' ? 1 : 0.4, 'pointer-events': settings.plugins.simplechamber.dht_driver() == 'adafruit_dht' ? 'auto' : 'none' }">
		<div class="control-group" title="{{ _('Type of DHT sensor connected.') }}">
			<label class="control-label">{{ _('Temperature sensor') }}</label>
			<div class="controls">
				<select data-bind="value: settings.plugins.simplechamber.sensor_type">
					<option value="11">DHT11</option>
					<option value="21">DHT21</option>
					<option value="22">DHT22</option>
				</select>
			</div>
		</div>

		<div class="control-group" title="{{ _('The physical GPIO pin (1-40) the DHT sensor is connected to.') }}">
			<label class="control-label">{{ _('DHT sensor GPIO pin') }}</label>
			<div class="controls">
				<input type="number" class="input-mini text-right" min="1" max="40" step="1" data-bind="value: settings.plugins.simplechamber.sensor_pin">
			</div>
		</div>
	</div>

	<div class="control-group" title="{{ _('The physical GPIO pin (1-40) the fan is connected to.') }}">
		<label class="control-label">{{ _('Fan GPIO pin') }}</label>
		<div class="controls">
			<input type="number" class="input-mini text-right" min="1" max="40" step="1" data-bind="value: settings.plugins.simplechamber.fan_pin">
		</div>
	</div>
	
</form>
